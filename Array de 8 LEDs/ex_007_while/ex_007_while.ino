const byte led0 = 5;          // donar nom al pin 13 de lâ€™Arduino
int num=0;
//********** Setup ****************************************************************
void setup()
{
 pinMode(led0, OUTPUT);    
 while(num< 30)
  {
    num ++;
    digitalWrite(led0, HIGH);    // posar a 5V el pin 13
    delay(300);                  // es queden leds 500ms encesos
    digitalWrite(led0, LOW);     // posar a 0V el pin 13
    delay(300);                  // es queden leds 500ms apagats
  }
}

